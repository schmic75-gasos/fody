{
  "expo": {
    "name": "Fody",
    "slug": "fody-app",
    "version": "1.0.2",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#2E7D32"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "cz.osm.fody",
      "infoPlist": {
        "NSCameraUsageDescription": "Fody potřebuje přístup ke kameře pro pořizování fotografií rozcestníků a dalších objektů.",
        "NSPhotoLibraryUsageDescription": "Fody potřebuje přístup k fotoalbu pro výběr fotografií k nahrání.",
        "NSLocationWhenInUseUsageDescription": "Fody potřebuje přístup k poloze pro určení GPS souřadnic fotografií."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#2E7D32"
      },
      "package": "cz.osm.fody",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {},
    "plugins": [
      "expo-image-picker",
      "expo-location",
      "expo-asset"
    ],
    "extra": {
      "eas": {
        "projectId": "9f34eb76-b6b2-43b5-8c3d-564dc8cdeb69"
      }
    }
  }
}
